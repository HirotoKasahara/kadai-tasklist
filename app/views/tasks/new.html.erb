<h1>タスク追加ページ</h1>

  <%= form_with(model: @task,local: true) do |f| %>
    <% if @task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    
    <div>タスク<%=f.text_field :content %></div>
  <div>タスク状況<%= f.text_field :status %></div>
    <%= f.submit '投稿' %>
  <% end %>
  <%= link_to '一覧に戻る', tasks_path %>